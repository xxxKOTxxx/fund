.header
  height 891px
  padding-top 245px
  box-sizing border-box
  retina-image("/images/header-background.jpg", 1440px 891px, '@2x')
  background-size cover
  background-position 50% 100%
  background-repeat no-repeat
  .text-block
    width 850px
    float right
    padding 2rem 10rem 2rem 3rem
    box-sizing border-box
    border 2px solid $white
    border-right 0 none
  .heading
    color $text-heading-color
    line-height 2.5rem
  .text
    font-weight 800
    font-size 2rem
    line-height 2.5rem
    margin-bottom 1rem
    color $text-light-color