.kids
  relative false
  height 684px
  padding-right 602px
  .image
    absolute 0 0 0 false
    size 602px 684px
    box-sizing border-box
    retina-image("/images/kids.jpg", 602px 684px, '@2x')
    background-size 602px 684px
    background-position 100% 0
    background-repeat no-repeat
  .text-block
    max-width 450px
    margin auto
    padding 5rem 0
    box-sizing border-box
    font-weight 800
    .text
      line-height 2rem
      font-size 1.3rem
    .link
      font-size 1.5rem
      display inline-block
      padding-bottom 5px
      margin-top 2rem
      border-bottom 2px solid $text-primary-color
      color $text-primary-color
      cursor pointer

  .important
    absolute false 601px 0 0
    z-index 1
    padding 2.8rem 3rem
    box-sizing border-box
    transform translateY(50%)
    color $text-light-color
    background-color $block-background-color
    &-title
      line-height 3rem
      font-size 3rem
      font-weight 800
    &-description
      line-height 1.5rem
      max-width 420px

.kids
  +media-query(all, max-width $site-tablet-width)
    height auto
    padding 0
    .text-block
    .image
      position static
      width 100%
      max-width 602px
      margin auto

    .important
      max-width 602px
      right 0
      margin auto
